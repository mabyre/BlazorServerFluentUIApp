<h3>Icones that are in collection: FluentIcons</h3>
<div style="display:flex">
    <FluentIcon Name="@FluentIcons.ArrowSortUp" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
    <FluentIcon Name="@FluentIcons.ArrowSortDown" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
    <FluentIcon Name="@FluentIcons.ChevronDoubleLeft" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
    <FluentIcon Name="@FluentIcons.ChevronDoubleRight" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
    <FluentIcon Name="@FluentIcons.ChevronLeft" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
    <FluentIcon Name="@FluentIcons.ChevronRight" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
    <FluentIcon Name="@FluentIcons.Filter" Size="@IconSize.Size20" Variant="@IconVariant.Regular" Color="@Color.Accent" />
</div>
