@page "/fluentui"

<h4>Default Button</h4>
<FluentButton>Button</FluentButton>

<h4>Disabled Button</h4>
<FluentButton Disabled="true">Button</FluentButton>

<h4>Autofocus Button</h4>
<FluentButton Autofocus="true">Button</FluentButton>

<h4>On Click</h4>
<p style="padding:15px"><FluentButton @onclick="() => WasClicked()">Click me</FluentButton></p>

<FluentCard Style="padding: 1.5rem; width: 400px; height: 250px; ">
	<h2>Hello Fluent UI!</h2>
	<FluentButton 
		Appearance="@Appearance.Accent"
		@onclick="() => WasClicked()">Click Me</FluentButton>
	<p style="padding:15px" role="status">Current count: @currentCount</p>
</FluentCard>

<div style="padding:15px">
<FluentButton @ref="ref1" Appearance="Appearance.Filled">A button</FluentButton>
<FluentButton @ref="ref2" Appearance="Appearance.Filled">Another button</FluentButton>
<FluentButton @ref="ref3" Appearance="Appearance.Filled">And one more</FluentButton>
<FluentButton @ref="ref4" Appearance="Appearance.Filled" @onclick=OnClick>Last button</FluentButton>
</div>

