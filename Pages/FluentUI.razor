<!-- Icons in a button -->
<div style="display:flex">
    <FluentButton Appearance="Appearance.Neutral"><FluentIcon Slot="start" Name="@FluentIcons.ArrowSortUp" /> Button with icon in 'start' slot</FluentButton>
    <FluentButton Appearance="Appearance.Neutral"><FluentIcon Slot="end" Name="@FluentIcons.ArrowSortUp" /> Button with icon in 'end' slot</FluentButton>
</div>

